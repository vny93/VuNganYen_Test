<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="style_image">
        <item name="android:layout_width">@dimen/_50sdp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="style_text_vote">
        <item name="android:layout_width">@dimen/_105sdp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/myriadpropegular</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:padding">@dimen/_6sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/purple_200</item>
    </style>

    <style name="style_text_header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/myriadpropegular</item>
        <item name="android:textSize">@dimen/_9sdp</item>
        <item name="android:layout_gravity">right</item>
    </style>

    <style name="style_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/myriadpropegular</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="style_text_body1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/myriadpropegular</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/greeen</item>
    </style>

    <style name="style_text_body2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_200sdp</item>
        <item name="android:fontFamily">@font/myriadpropegular</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:padding">@dimen/_20sdp</item>
        <item name="android:textColor">@color/armadillo</item>
    </style>

    <style name="style_line">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/_1sdp</item>
        <item name="android:background">@color/tasman</item>
    </style>



</resources>